<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Products</display-name>

  <servlet>
    <servlet-name>ManufacturerServlet</servlet-name>
    <servlet-class>servlets.ManufacturerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>addManufacturer</servlet-name>
    <servlet-class>servlets.AddManufacturerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UpdateManufacturerServlet</servlet-name>
    <servlet-class>servlets.UpdateManufacturerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>GetAllManufacturersServlet</servlet-name>
    <servlet-class>servlets.GetAllManufacturersServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>addProductServlet</servlet-name>
    <servlet-class>servlets.AddProductServlet</servlet-class>
  </servlet>

  <!-- URL space mappings ============================================= -->

  <servlet-mapping>
    <servlet-name>ManufacturerServlet</servlet-name>
    <url-pattern>/manufacturer</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>addManufacturer</servlet-name>
    <url-pattern>/add-manufacturer</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UpdateManufacturerServlet</servlet-name>
    <url-pattern>/update-manufacturer</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>GetAllManufacturersServlet</servlet-name>
    <url-pattern>/get-all-manufacturers</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>addProductServlet</servlet-name>
    <url-pattern>/add-product</url-pattern>
  </servlet-mapping>

</web-app>
